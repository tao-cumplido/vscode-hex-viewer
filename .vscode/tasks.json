// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Watch Extension",
			"type": "npm",
			"script": "watch:extension",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"group": "watch"
			}
		},
		{
			"label": "Watch Webview",
			"type": "npm",
			"script": "watch:webview",
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ": (.+?): (.*)$",
						"severity": 1,
						"message": 2
					},
					{
						"regexp": "^file: (.+?):(\\d+):(\\d+)$",
						"file": 1,
						"line": 2,
						"column": 3
					}
				],
				"background": {
					"beginsPattern": "^build started",
					"endsPattern": "^built in"
				}
			},
			"isBackground": true,
			"presentation": {
				"group": "watch"
			}
		},
		{
			"label": "Watch",
			"dependsOn": ["Watch Extension", "Watch Webview"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
