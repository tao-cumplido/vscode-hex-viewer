{
	"name": "hex-viewer",
	"displayName": "Hex Viewer",
	"description": "View files in byte representation with multiple decoding options.",
	"version": "0.2.1",
	"workspaces": [
		"src/binary-view"
	],
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/tao-cumplido/vscode-hex-viewer"
	},
	"bugs": {
		"url": "https://github.com/tao-cumplido/vscode-hex-viewer/issues"
	},
	"license": "MIT",
	"icon": "logo.png",
	"activationEvents": [
		"onCustomEditor:hexViewer.binary"
	],
	"main": "./dist/src/extension.js",
	"publisher": "tao-cumplido",
	"contributes": {
		"configuration": {
			"title": "Hex Viewer",
			"properties": {
				"hexViewer.customDecoders": {
					"type": "object",
					"additionalProperties": {
						"type": "string"
					},
					"default": {},
					"description": "Map of custom decoders. Keys are decoder names and values are the path to the JS file. Relative paths are resolved from the workspace root."
				}
			}
		},
		"customEditors": [
			{
				"viewType": "hexViewer.binary",
				"displayName": "Hex Viewer",
				"selector": [
					{
						"filenamePattern": "*"
					}
				],
				"priority": "option"
			}
		],
		"commands": [
			{
				"command": "hexViewer.selectDecoder",
				"title": "Hex Viewer: Select decoder"
			},
			{
				"command": "hexViewer.reloadDecoders",
				"title": "Hex Viewer: Reload decoders"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "hexViewer.selectDecoder",
					"when": "hexViewer:openEditor"
				},
				{
					"command": "hexViewer.reloadDecoders"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./tsconfig.src.json && npm run -w binary-view build",
		"watch:extension": "tsc -watch -p ./tsconfig.src.json",
		"watch:webview": "npm run -w binary-view watch",
		"pretest": "npm run compile && tsc -p ./tsconfig.test.json && npm run lint",
		"lint": "eslint .",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"@vscode/webview-ui-toolkit": "0.8.4",
		"ajv": "8.8.2",
		"clear-module": "4.1.2"
	},
	"devDependencies": {
		"@types/vscode": "1.62.0",
		"@types/glob": "7.2.0",
		"@types/mocha": "9.0.0",
		"@types/node": "14.17.33",
		"@typescript-eslint/eslint-plugin": "5.4.0",
		"@typescript-eslint/parser": "5.4.0",
		"@vscode/test-electron": "1.6.2",
		"eslint": "8.2.0",
		"eslint-plugin-style": "0.1.7",
		"glob": "7.2.0",
		"json-schema-to-ts": "1.6.4",
		"mocha": "9.1.3",
		"prettier": "2.4.1",
		"prettier-plugin-sh": "0.7.1",
		"typescript": "4.4.4",
		"vsce": "2.5.1"
	}
}
