{
	"name": "hex-viewer",
	"displayName": "hex-viewer",
	"description": "",
	"version": "0.0.1",
	"workspaces": [
		"src/binary-view"
	],
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCustomEditor:hexViewer.binary"
	],
	"main": "./dist/src/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "hexViewer.binary",
				"displayName": "Hex Viewer",
				"selector": [
					{
						"filenamePattern": "*"
					}
				],
				"priority": "option"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./tsconfig.src.json",
		"watch": "tsc -watch -p ./tsconfig.src.json",
		"pretest": "npm run compile && tsc -p ./tsconfig.test.json && npm run lint",
		"lint": "eslint .",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "1.62.0",
		"@types/glob": "7.2.0",
		"@types/mocha": "9.0.0",
		"@types/node": "14.17.33",
		"@typescript-eslint/eslint-plugin": "5.4.0",
		"@typescript-eslint/parser": "5.4.0",
		"@vscode/test-electron": "1.6.2",
		"eslint": "8.2.0",
		"eslint-plugin-style": "0.1.7",
		"glob": "7.2.0",
		"mocha": "9.1.3",
		"prettier": "2.4.1",
		"prettier-plugin-sh": "0.7.1",
		"typescript": "4.4.4"
	}
}
